<div class="row">
  <div class="small-6 columns small-centered profile">
    <h1>Profile for <%= @user.name %></h1>
  </div>
</div>



<%= @user.email %><br />
<div class="row">
  <div class="panel small-4 columns">
    <h3>Availability:</h3>
    <% @user.availabilities.each do |availability| %>
      <div>
        <h4><%= availability.day %>, <%= availability.time.strftime("%I:%M %p") %></h4>
      </div>
    <% end %>
  </div>
</div>