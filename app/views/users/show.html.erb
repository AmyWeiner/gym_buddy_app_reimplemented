<div class="row">
  <div class="small-6 columns small-centered profile">
    <h1>Profile for <%= @user.name %></h1>
  </div>
</div>

<div class="row">
  <div class="panel small-6 columns">
    <h3>Email:</h3>
    <h4><%= @user.email %></h4>
    <h3>Gym:</h3>
     <% unless @user.gym.nil? %>  
      <h4>Name: <%= @user.gym.name %></h4>
      <h4>Location: <%= @user.gym.street %> <%= @user.gym.city %> <%= @user.gym.state %> <%= @user.gym.zip_code %></h4>
    <% end %>
    <h3>Availability:</h3>
    <% @user.availabilities.each do |availability| %>
      <div>
        <h4><%= availability.day %>, <%= availability.time.strftime("%I:%M %p") %><%= button_to "Remove", [availability.user, availability], :method => :delete %></h4>
      </div>
    <% end %>
    <%= button_to "Add Availability", new_user_availability_path(current_user), :method => :get %>
     <%= button_to "Add Gym", new_gym_path, :method => :get %>
  </div>
</div>


    
  