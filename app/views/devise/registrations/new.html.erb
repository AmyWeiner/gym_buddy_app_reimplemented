
<div class="row">
  <div class="panel callout radius small-4 small-centered columns signup">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
     <div>
      <%= f.text_field :name, placeholder: "Enter Name", autofocus: true %>
    </div>
      <div>
      <%= f.email_field :email, placeholder: "Enter Email" %>
    </div>

      <div>
        <%= f.password_field :password, placeholder: "Enter Password", autocomplete: "off" %>
      </div>

      <div>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off" %>
      </div>

      <div><%= f.submit "Sign up", class: "button" %></div>
    <% end %>
  </div>
</div>
